
<%= form_for(@item) do %>
  <%= label_tag(:bar_code, "Bar code:") %>
  <%= text_field_tag(:bar_code) %>
  <%= submit_tag("Search") %>
<% end %>

<% if Rails.env.production? %>
  <div id="scandit-barcode-picker" data-apikey="ENV['SCANDIT-PROD-APIKEY']" style="width: 100%; height: 100%;"></div>
<% else %>
  <div id="scandit-barcode-picker" data-apikey="ENV['SCANDIT-DEV-APIKEY']" style="width: 100%; height: 100%;"></div>
<% end %>
